    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        try {
            String usu = txtnombreUsuario.getText();
            String contra = txtcontrasena.getText();
            
            if (usu.equals(this.usuario)) {
                
                if (contra.equals(this.contrasena)) {
                    frmMain main = new frmMain();
                    main.setVisible(true);

                }else{
                    JOptionPane.showMessageDialog(null, "Ingrese una contraseña valida");
                }
            }else{
                JOptionPane.showMessageDialog(null, "No se encontro el usuario registrado ");
            }

        } catch (Exception e) {
            JOptionPane.showMessageDialog(null, JOptionPane.ERROR_MESSAGE);
        }
    }                                        

