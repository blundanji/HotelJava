//JFRAME PAGO

package hotelcali;

import Datos.Cliente;
import javax.swing.table.DefaultTableModel;
import Datos.Habitacion;
import static hotelcali.frmReserva.txtCliente;
import static hotelcali.frmReserva.txtHabitacion;
import static hotelcali.frmReserva.txtidcliente;
import static hotelcali.frmReserva.txtidhabitacion;
import javax.swing.JOptionPane;
import java.sql.Connection;
import java.sql.Date;
import java.util.ArrayList;
import java.util.List;

public class frmHabitacion extends javax.swing.JFrame {

    DefaultTableModel modelo;
    private String ac = "guardar";

    public frmHabitacion() {

        initComponents();
        this.setLocationRelativeTo(null);
        Mostrar("");
        inHabilitar();

        modelo = new DefaultTableModel() {
            @Override
            public boolean isCellEditable(int row, int column) {
                return false;
            }
        };

    }

    void Mostrar(String buscar) {
        try {
            DefaultTableModel modelo;
            Habitacion habi = new Habitacion();
            modelo = habi.mostrar(buscar);

            jttablaListado.setModel(modelo);

        } catch (Exception e) {
            JOptionPane.showConfirmDialog(rootPane, e);
        }
    }

