     void habilitarFrm() {
        
        txtNombre.setEnabled(true);
        txtPrimerApellido.setEnabled(true);
        txtSegundoApellido.setEnabled(true);
        cbTipoDocumento.setEnabled(true);
        txtNumeroDocumento.setEnabled(true);
        txtDireccion.setEnabled(true);
        txtTelefono.setEnabled(true);
        txtCorreo.setEnabled(true);

        btnCrear.setEnabled(true);
        btnCancelar.setEnabled(true);
        
       
        txtNombre.setText("");
        txtPrimerApellido.setText("");
        txtSegundoApellido.setText("");
        txtNumeroDocumento.setText("");
        txtDireccion.setText("");
        txtTelefono.setText("");
        txtCorreo.setText("");

    }

    void inHabilitarFrm() {
        
        txtNombre.setEnabled(false);
        txtPrimerApellido.setEnabled(false);
        txtSegundoApellido.setEnabled(false);
        cbTipoDocumento.setEnabled(false);
        txtNumeroDocumento.setEnabled(false);
        txtDireccion.setEnabled(false);
        txtTelefono.setEnabled(false);
        txtCorreo.setEnabled(false);

        btnCrear.setEnabled(false);
        btnCancelar.setEnabled(false);
        
        
        txtNombre.setText("");
        txtPrimerApellido.setText("");
        txtSegundoApellido.setText("");
        txtNumeroDocumento.setText("");
        txtDireccion.setText("");
        txtTelefono.setText("");
        txtCorreo.setText("");

    }
    private void btnCrearActionPerformed(java.awt.event.ActionEvent evt) {                                         

        if (txtNombre.getText().length() == 0) {
            JOptionPane.showConfirmDialog(rootPane, "Debe ingresar un Nombre para el cliente");
            txtNombre.requestFocus();
            return;
        }
        if (txtPrimerApellido.getText().length() == 0) {
            JOptionPane.showConfirmDialog(rootPane, "Debe ingresar el Primer Apellido del cliente");
            txtPrimerApellido.requestFocus();
            return;
        }
        if (txtSegundoApellido.getText().length() == 0) {
            JOptionPane.showConfirmDialog(rootPane, "Debe ingresar el Segundo Apellido del cliente");
            txtSegundoApellido.requestFocus();
            return;
        }
        if (txtTelefono.getText().length() == 0) {
            JOptionPane.showConfirmDialog(rootPane, "Debe ingresar el numero de telefono del cliente");
            txtTelefono.requestFocus();
            return;
        }

        Cliente datosCliente = new Cliente();

        datosCliente.setNombre(txtNombre.getText());
        datosCliente.setPrimerApellido(txtPrimerApellido.getText());
        datosCliente.setSegundoApellido(txtSegundoApellido.getText());

        int opcion = cbTipoDocumento.getSelectedIndex();

        datosCliente.setTipoDocumento((String) cbTipoDocumento.getItemAt(opcion));

        datosCliente.setNumDocumento(txtNumeroDocumento.getText());
        datosCliente.setDireccion(txtDireccion.getText());
        datosCliente.setTelefono(txtTelefono.getText());
        datosCliente.setCorreo(txtCorreo.getText());

        inHabilitarFrm();

        if (datosCliente.insertar(datosCliente)) {
            JOptionPane.showMessageDialog(rootPane, "El cliente fue registrado satisfactoriamente");
            inHabilitarFrm();
        }


    }                                        

    private void btnCancelarActionPerformed(java.awt.event.ActionEvent evt) {                                            
        this.dispose();
    }                                           

    private void txtNombreActionPerformed(java.awt.event.ActionEvent evt) {                                          
        txtNombre.transferFocus();
    }                                         

    private void txtPrimerApellidoActionPerformed(java.awt.event.ActionEvent evt) {                                                  
        txtPrimerApellido.transferFocus();
    }                                                 

    private void txtSegundoApellidoActionPerformed(java.awt.event.ActionEvent evt) {                                                   
        txtSegundoApellido.transferFocus();
    }                                                  

    private void txtDireccionActionPerformed(java.awt.event.ActionEvent evt) {                                             
        txtDireccion.transferFocus();
    }                                            

    private void txtTelefonoActionPerformed(java.awt.event.ActionEvent evt) {                                            
        txtTelefono.transferFocus();
    }                                           

    private void txtCorreoActionPerformed(java.awt.event.ActionEvent evt) {                                          
        txtCorreo.transferFocus();
    }                                         

    private void btnCrear1ActionPerformed(java.awt.event.ActionEvent evt) {                                          
        habilitarFrm();
    }                                         

