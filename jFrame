    private void btnReservaActionPerformed(java.awt.event.ActionEvent evt) {                                           
        habilitar();
        btnAgregar.setText("Guardar");
        ac = "guardar";

    }                                          

    private void btnAgregarActionPerformed(java.awt.event.ActionEvent evt) {                                           
        if (txtidhabitacion.getText().isEmpty()) {
            JOptionPane.showConfirmDialog(rootPane, "Debes Seleccionar una Habitación");
            txtPrecio.requestFocus();
            return;
        }
        if (txtCliente.getText().isEmpty()) {
            JOptionPane.showConfirmDialog(rootPane, "Debes Seleccionar un Cliente");
            txtCliente.requestFocus();
            return;
        }
        if (txtPrecio.getText().isEmpty()) {
            JOptionPane.showMessageDialog(rootPane, "Debes ingresar un precio válido");
            return;
        }

        Reserva datos = new Reserva();

        datos.setIdHabitacion(Integer.parseInt(txtidhabitacion.getText()));
        datos.setIdCliente(Integer.parseInt(txtidcliente.getText()));
        datos.setPagoTotal(Double.parseDouble(txtPrecio.getText()));

        Calendar cal;
        int d, m, a;
        cal = jDFecha.getCalendar();
        d = cal.get(Calendar.DAY_OF_MONTH);
        m = cal.get(Calendar.MONTH);
        a = cal.get(Calendar.YEAR) - 1900;
        datos.setFechaReserva(new Date(a, m, d));

        cal = jDFechaIngreso.getCalendar();
        d = cal.get(Calendar.DAY_OF_MONTH);
        m = cal.get(Calendar.MONTH);
        a = cal.get(Calendar.YEAR) - 1900;
        datos.setFechaIngresa(new Date(a, m, d));

        cal = jDFechaSalida.getCalendar();
        d = cal.get(Calendar.DAY_OF_MONTH);
        m = cal.get(Calendar.MONTH);
        a = cal.get(Calendar.YEAR) - 1900;
        datos.setFechaSalida(new Date(a, m, d));

        if (ac.equals("guardar")) {
            if (datos.insertar(datos)) {
                JOptionPane.showMessageDialog(rootPane, "La reserva fue registrada satisfactoriamente");
                Habitacion habi = new Habitacion();
                habi.setIdHabitacion(Integer.parseInt(txtidhabitacion.getText()));
                habi.ocupar(habi);
                inHabilitar();
                mostrar("");

            }

        } else if (ac.equals("editar")) {
            if (datos.editar(datos)) {
                JOptionPane.showMessageDialog(rootPane, "La reserva fue Editada satisfactoriamente");
                mostrar("");
                inHabilitar();
            }
        }

    }                                          

    private void btnCancelarActionPerformed(java.awt.event.ActionEvent evt) {                                            
        this.dispose();
    }                                           

    private void btnbuscaClienteActionPerformed(java.awt.event.ActionEvent evt) {                                                
        frmListaCliente form = new frmListaCliente();
        form.toFront();
        form.setVisible(true);

    }                                               

    private void btnbuscahabitacion1ActionPerformed(java.awt.event.ActionEvent evt) {                                                    
        frmListaHabitacion form = new frmListaHabitacion();
        form.toFront();
        form.setVisible(true);
    }                                                   

    private void btnrealizarpagosActionPerformed(java.awt.event.ActionEvent evt) {                                                 

        int fila = tablalistado.getSelectedRow();

        frmPago.idreserva = tablalistado.getValueAt(fila, 0).toString();
        frmPago.cliente = tablalistado.getValueAt(fila, 4).toString();
        frmPago.precio = Double.parseDouble(tablalistado.getValueAt(fila, 8).toString());

        frmPago.idhabitacion = tablalistado.getValueAt(fila, 1).toString();
        frmPago.habitacion = tablalistado.getValueAt(fila, 2).toString();

        frmPago form = new frmPago();

        form.toFront();
        form.setVisible(true);

    }                                                

    private void tablalistadoMouseClicked(java.awt.event.MouseEvent evt) {                                          
        // TODO add your handling code here:
        btnAgregar.setText("Editar");
        habilitar();

        ac = "editar";

        int fila = tablalistado.rowAtPoint(evt.getPoint());

        txtidhabitacion.setText(tablalistado.getValueAt(fila, 1).toString());
        txtHabitacion.setText(tablalistado.getValueAt(fila, 2).toString());
        txtidcliente.setText(tablalistado.getValueAt(fila, 3).toString());
        txtCliente.setText(tablalistado.getValueAt(fila, 4).toString());
        jDFecha.setDate(Date.valueOf(tablalistado.getValueAt(fila, 5).toString()));
        jDFechaIngreso.setDate(Date.valueOf(tablalistado.getValueAt(fila, 6).toString()));
        jDFechaSalida.setDate(Date.valueOf(tablalistado.getValueAt(fila, 7).toString()));
        txtPrecio.setText(tablalistado.getValueAt(fila, 8).toString());

    }                                         

    private void txtidhabitacionActionPerformed(java.awt.event.ActionEvent evt) {                                                
        // TODO add your handling code here:
        txtidhabitacion.transferFocus();
    }                                               

    private void txtidclienteActionPerformed(java.awt.event.ActionEvent evt) {                                             
        // TODO add your handling code here:
    }                                            

