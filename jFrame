    void habilitar() {

        txtidHabitacion.setVisible(true);

        txtNumero.setEnabled(true);
        cbPisoHabitacion.setEnabled(true);
        txtPrecio.setEnabled(true);
        cbTipoHabitacion.setEnabled(true);
        txtDescripcion.setEnabled(true);
        cbEstado.setEnabled(true);

        btnAgregar.setEnabled(true);
        btnCancelar.setEnabled(true);
        btnBorrar.setEnabled(true);
        txtNumero.setText("");
        txtPrecio.setText("");
        txtDescripcion.setText("");

    }

    void inHabilitar() {
        txtidHabitacion.setVisible(false);

        txtNumero.setEnabled(false);
        cbPisoHabitacion.setEnabled(false);
        txtPrecio.setEnabled(false);
        cbTipoHabitacion.setEnabled(false);
        txtDescripcion.setEnabled(false);
        cbEstado.setEnabled(false);

        btnAgregar.setEnabled(false);
        btnCancelar.setEnabled(false);
        btnBorrar.setEnabled(false);
        txtNumero.setText("");
        txtPrecio.setText("");
        txtDescripcion.setText("");
    }
    private void btnReservaActionPerformed(java.awt.event.ActionEvent evt) {                                           

        habilitar();
        btnAgregar.setText("Guardar");
        ac = "guardar";
    }                                          

    private void btnAgregarActionPerformed(java.awt.event.ActionEvent evt) {                                           

        if (txtNumero.getText().length() == 0) {
            JOptionPane.showConfirmDialog(rootPane, "Debes ingresar un Número de Habitación");
            txtNumero.requestFocus();
            return;
        }
        if (txtDescripcion.getText().length() == 0) {
            JOptionPane.showConfirmDialog(rootPane, "Debes ingresar una descripción para la Habitación Habitación");
            txtDescripcion.requestFocus();
            return;
        }

        if (txtPrecio.getText().length() == 0) {
            JOptionPane.showConfirmDialog(rootPane, "Debes ingresar un precio diario para la Habitación Habitación");
            txtPrecio.requestFocus();
            return;
        }

        Habitacion habitacion = new Habitacion();

        habitacion.setNumero(txtNumero.getText());
        int seleccionado = cbPisoHabitacion.getSelectedIndex();
        habitacion.setPiso((String) cbPisoHabitacion.getItemAt(seleccionado));

        habitacion.setPrecio(Double.parseDouble(txtPrecio.getText()));
        seleccionado = cbEstado.getSelectedIndex();
        habitacion.setEstado((String) cbEstado.getItemAt(seleccionado));
        seleccionado = cbTipoHabitacion.getSelectedIndex();
        habitacion.setTipo((String) cbTipoHabitacion.getItemAt(seleccionado));
        habitacion.setDescripcion(txtDescripcion.getText());

        if (ac.equals("guardar")) {
            if (habitacion.insertar(habitacion)) {
                JOptionPane.showMessageDialog(rootPane, "La habitación fue registrada satisfactoriamente");
                Mostrar("");
                inHabilitar();

                if (Habitacion.habitaciones.contains(habitacion)) {
                    JOptionPane.showMessageDialog(rootPane, "La habitación ya ha sido seleccionada");
                } else {
                    Habitacion.habitaciones.add(habitacion);
                    JOptionPane.showMessageDialog(rootPane, "La habitación fue registrada satisfactoriamente");
                    Mostrar("");
                    inHabilitar();
                }

            }

        } else if (ac.equals("editar")) {
            habitacion.setIdHabitacion(Integer.parseInt(txtidHabitacion.getText()));

            if (habitacion.editar(habitacion)) {
                JOptionPane.showMessageDialog(rootPane, "La habitación fue Editada satisfactoriamente");
                Mostrar("");
                inHabilitar();
            }
        }


    }                                          

    private void btnBorrarActionPerformed(java.awt.event.ActionEvent evt) {                                          

        int fila = jttablaListado.getSelectedRow();
        if (fila == -1) {
            JOptionPane.showMessageDialog(this, "Debe seleccionar una habitación");
        } else {
            Habitacion habitacion = Habitacion.habitaciones.get(fila);
            int confirmacion = JOptionPane.showConfirmDialog(this, "¿Está seguro de eliminar la habitación seleccionada?");
            if (habitacion.eliminar(habitacion)) {
                Habitacion.habitaciones.remove(habitacion);
                JOptionPane.showMessageDialog(this, "Habitación eliminada correctamente");
                Mostrar("");
            } else {
                JOptionPane.showMessageDialog(this, "Ocurrió un error al eliminar la habitación");
            }
        }


    }                                         

    private void btnCancelarActionPerformed(java.awt.event.ActionEvent evt) {                                            
        this.dispose();        // TODO add your handling code here:
    }                                           

    private void btnBuscarActionPerformed(java.awt.event.ActionEvent evt) {                                          
        Mostrar(txtBuscar.getText());
    }                                         

    private void txtBuscarActionPerformed(java.awt.event.ActionEvent evt) {                                          
        // TODO add your handling code here:
    }                                         

    private void btnSalirActionPerformed(java.awt.event.ActionEvent evt) {                                         
        this.dispose();
    }                                        

    private void jttablaListadoMouseClicked(java.awt.event.MouseEvent evt) {                                            
        btnAgregar.setText("Editar");
        habilitar();

        ac = "editar";

        int filaSeleccionada = jttablaListado.getSelectedRow();
        if (filaSeleccionada >= 0) {
            // Obtener los datos de la fila seleccionada
            String idHabitacion = jttablaListado.getValueAt(filaSeleccionada, 0).toString();
            String numero = jttablaListado.getValueAt(filaSeleccionada, 1).toString();
            String piso = jttablaListado.getValueAt(filaSeleccionada, 2).toString();
            String tipo = jttablaListado.getValueAt(filaSeleccionada, 3).toString();
            String precio = jttablaListado.getValueAt(filaSeleccionada, 4).toString();
            String estado = jttablaListado.getValueAt(filaSeleccionada, 5).toString();
            String descripcion = jttablaListado.getValueAt(filaSeleccionada, 6).toString();

            // Copiar los datos a los campos de ingreso
            txtidHabitacion.setText(idHabitacion);
            txtNumero.setText(numero);
            cbPisoHabitacion.setSelectedItem(piso);
            txtPrecio.setText(precio);
            cbTipoHabitacion.setSelectedItem(tipo);
            cbEstado.setSelectedItem(estado);
            txtDescripcion.setText(descripcion);
        }

    }                                           

