    private void tablalistadoMouseClicked(java.awt.event.MouseEvent evt) {                                          
        int filaseleccionada;
        try {
            filaseleccionada = tablalistado.getSelectedRow();
            if (filaseleccionada == -1) {
                JOptionPane.showMessageDialog(null, "No ha selecionado ninguna fila");

            } else {
                String codigo = (String) tablalistado.getValueAt(filaseleccionada, 0);
                String descripcion = (String) tablalistado.getValueAt(filaseleccionada, 1);
                String precio = (String) tablalistado.getValueAt(filaseleccionada, 2);
                

            }
        } catch (Exception e) {
            JOptionPane.showMessageDialog(null, "ERROR " + e.getMessage() + "\n Intentelo de nuevo", ".::Erorr en la operacion::.", JOptionPane.ERROR_MESSAGE);

        }
    }                                         

    private void btnbuscarActionPerformed(java.awt.event.ActionEvent evt) {                                          
       
        mostrar(txtbuscar.getText());
    }                                         

    private void tablalistadoMousePressed(java.awt.event.MouseEvent evt) {                                          
        // TODO add your handling code here:
        if (evt.getClickCount() == 2) {
            int fila= tablalistado.getSelectedRow();
            String cod;
            String valor;
            
            cod=tablalistado.getValueAt(fila, 0).toString();
            valor =tablalistado.getValueAt(fila, 1).toString() +" " +tablalistado.getValueAt(fila, 2).toString() +" "+ tablalistado.getValueAt(fila, 3).toString();
            
            frmReserva.txtCliente.setText(valor);
            frmReserva.txtidcliente.setText(cod);
            this.dispose();
            
        }
    }                                         

  
